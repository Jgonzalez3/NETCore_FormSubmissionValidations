@model FormSubmission.Models.User
@if(@TempData["success"] != null)
{
    <h2>@TempData["success"]</h2>
}
else{
    <h1>Enter your information</h1>
    <form action="process" method="POST">
        <p>First Name <input type="text" name="firstname"><span asp-validation-for="firstname"></span></p>
        <p>Last Name <input type="text" name="lastname"><span asp-validation-for="lastname"></span></p>
        <p>Age <input type="text" name="age"><span asp-validation-for="age"></span></p>
        <p>Email Address <input type="email" name="email"><span asp-validation-for="email"></span></p>
        <p>Password <input type="password" name="password"><span asp-validation-for="password"></span></p>
        <button type="submit">Submit</button>
    </form>
}




